@model IEnumerable<EAD_Assignment.Models.Article>
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_LayoutPageClient.cshtml";
}

<!-- Top News Start-->
<div class="top-news">
    <div class="container">
        <div class="row">
            <div class="col-md-6 tn-left">
                <div class="row tn-slider">
                    @for (int i = 0; i < 2; i++)
                    {
                        <div class="col-md-6">
                            <div class="tn-img">
                                <img src="@Model.ElementAt(i).ImageUrl" width="480" height="284" style="object-fit:cover" />
                                <div class="tn-title">
                                    <a href="/Home/Details?url=@Model.ElementAt(i).Url">@Model.ElementAt(i).Title</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6 tn-right">
                <div class="row">
                    @for (int i = 2; i < 6; i++)
                    {
                        <div class="col-md-6">
                            <div class="tn-img">
                                <img src="@Model.ElementAt(i).ImageUrl" width="240" height="142" style="object-fit:cover" />
                                <div class="tn-title">
                                    <a href="/Home/Details?url=@Model.ElementAt(i).Url">@Model.ElementAt(i).Title</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Top News End-->
<!-- Category News Start-->
<div class="cat-news">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Thể thao</h2>
                <div class="row cn-slider">
                    @foreach (var article in Model)
                    {
                        if (article.CategoryId == 1)
                        {
                            <div class="col-md-6">
                                <div class="cn-img">
                                    <img src="@article.ImageUrl" width="225" height="150" style="object-fit:cover" />
                                    <div class="cn-title">
                                        <a href="/Home/Details?url=@article.Url">@article.Title</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="col-md-6">
                <h2>Pháp luật</h2>
                <div class="row cn-slider">
                    @foreach (var article in Model)
                    {
                        if (article.CategoryId == 2)
