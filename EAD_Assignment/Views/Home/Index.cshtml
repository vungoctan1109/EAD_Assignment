<!-- Main News Start-->
<div class="main-news">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="row">
                    @foreach (var article in Model.Take(12))
                    {
                        <div class="col-md-4">
                            <div class="mn-img">
                                <img src="@article.ImageUrl" style="width:255px; height: 162px; object-fit: cover" />
                                <div class="mn-title">
                                    <a href="/Home/Details?url=@article.Url">@article.Title</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-3">
                <div class="mn-list">
                    <h2>Đọc thêm</h2>
                    <ul>
                        @for (int i = 0; i < 11; i++)
                        {
